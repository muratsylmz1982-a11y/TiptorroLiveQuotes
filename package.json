{
  "name": "ttquotes",
  "version": "1.2.5",
  "description": "Digitale Livescreen Steuerung für TV-Geräte",
  "author": "Murat Söylemez",
  "main": "main.js",
  "build": {
    "productName": "TTQuotes",
    "appId": "de.ttquotes.app",
    "copyright": "Copyright © 2025 Murat Söylemez",
    "files": [
      "**/*",
      "!defaults/**"
    ],
    "extraResources": [
      {
        "from": "defaults",
        "to": "defaults"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/ttquotes.ico"
    }
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "release": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "docs:pdf": "node scripts/generate-pdf-manual.js"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "modules/**/*.js",
      "!modules/**/node_modules/**"
    ]
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "electron-updater": "^6.6.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "asar": "^3.2.0",
    "depcheck": "^1.4.7",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "knip": "^5.63.1",
    "puppeteer": "^24.26.1",
    "unimported": "^1.31.0"
  }
}
