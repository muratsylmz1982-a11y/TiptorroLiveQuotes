{
  "name": "ttquotes",
  "version": "1.2.1",
  "description": "Digitale Livescreen Steuerung für TV-Geräte",
  "author": "Murat Söylemez",
  "main": "main.js",
  "build": {
   "productName": "TTQuotes",
   "appId": "de.ttquotes.app",
   "copyright": "Copyright © 2025 Murat Söylemez",
    "files": [
   "**/*","!defaults/**"
  ],
  "extraResources": [
    { "from": "defaults", "to": "defaults" }
  ],
   "win": {
      "target": "nsis",
      "icon": "assets/ttquotes.ico"
    }
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "modules/**/*.js",
      "!modules/**/node_modules/**"
    ]
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "winston": "^3.11.0",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  }
}
